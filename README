    </possum2d-canvas>
    
</body>
</html>

# possum2d.js

const possum = possum2d();

let player = {
    x: 100,
    y: 100,
    width: 50,
    height: 50,
    speed: 5,
    color: 'red',
};

const draw = (dt) => {
    if (possum.keyboardState['ArrowUp']) {
        possum.move(player, 0, -1, dt);
    }
    if (possum.keyboardState['ArrowDown']) {
        possum.move(player, 0, 1, dt);
    }
    if (possum.keyboardState['ArrowLeft']) {
        possum.move(player, -1, 0, dt);
    }
    if (possum.keyboardState['ArrowRight']) {
        possum.move(player, 1, 0, dt);
    }

    possum.render(player);
};

possum.createCanvas(800, 600);
possum.setTitle("Possum2D Game");
possum.setBackgroundColor("lightblue");

possum.run();

